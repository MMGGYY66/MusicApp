<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.udacitymusicexample.udacitymusic.MainActivity">


    <LinearLayout
        android:id="@+id/navigationBar1"
        style="@style/NavigationStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            style="@style/NavigationStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="38sp" />

        <ImageView
            style="@style/NavigationStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:src="@drawable/logo_udacity_music"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/welcomeExit"
            style="@style/NavigationStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="3"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="top"
            android:text="Listen Music Now!"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>
