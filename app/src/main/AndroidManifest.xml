<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.music">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.udacity.music.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.udacity.music.HomeActivity"
            android:label="@string/screen_home" />
        <activity
            android:name="com.udacity.music.SearchActivity"
            android:label="@string/screen_search" />
        <activity
            android:name="com.udacity.music.LibraryActivity"
            android:label="@string/screen_library" />
        <activity
            android:name="com.udacity.music.ArtistActivity"
            android:label="@string/library_artists" />
        <activity
            android:name="com.udacity.music.AlbunsActivity"
            android:label="@string/library_albuns" />
        <activity
            android:name="com.udacity.music.AllSongs"
            android:label="@string/library_all_songs" />
    </application>

</manifest>